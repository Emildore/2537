<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comp 2537 Assignment 2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <%- include("svg") %>
    <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
          <div class="col-md-3 mb-2 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
              <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>
          </div>
    
          <ul class="nav nav-pills justify-content-center">
            <% for(var i = 0; i < locals.navLinks.length; i++) { %>
                <li><a href="<%= locals.navLinks[i].link %>" class="nav-link <% if (locals.navLinks[i].link == locals.currentURL) {%> active<%} %>"><%= locals.navLinks[i].name %></a></li>
            <% } %>
            <% if (locals.authenticated && locals.user_type === 'admin') { %>
              <li><a href="/admin" class="nav-link <% if (locals.currentURL === '/admin') {%> active<%} %>">Admin</a></li>
            <% } %>
          </ul>
    
          <div class="col-md-3 text-end">
            <% if (!locals.authenticated) { %>
                <a href="/login" class="btn btn-outline-primary me-2<% if (locals.currentURL === '/login') {%> active<%} %>">Login</a>
                <a href="/signup" class="btn btn-outline-primary me-2<% if (locals.currentURL === '/signup') {%> active<%} %>">Sign-up</a>
              <% } else { %>
                <a href="/logout" class='btn btn-secondary<% if (locals.currentURL === '/logout') {%> active<%} %>'>Log-Out</a>
              <% } %>
          </div>
        </header>
      </div>
      <div class="container">